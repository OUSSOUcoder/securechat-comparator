        function selectAnswer(questionId, value) {
            answers[questionId] = value;
            if (currentQuestion < questions.length - 1) {
                currentQuestion++;
            } else {
                showResult = true;
            }
            render();
        }

        function restart() {
            currentQuestion = 0;
            answers = { adversary: 0, sensitivity: 0, consequences: 0, technical: 0, usage: 0 };
            showResult = false;
            render();
        }

        function calculateRisk() {
            const total = answers.adversary + answers.sensitivity + answers.consequences;
            if (total <= 2) return 'low';
            if (total <= 4) return 'medium';
            return 'high';
        }

